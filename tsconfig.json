{
    "extends": [
        "@tsconfig/recommended/tsconfig.json",
        "@tsconfig/strictest/tsconfig.json",
    ],
    "compilerOptions": {
        "target": "ES2021",
        "module": "NodeNext",
        "rootDir": "./src",
        "outDir": "./dist",
        "paths": {
            "~/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
  }